<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/infoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="monospace"
        android:gravity="start"
        android:lineSpacingExtra="2.5dp"
        android:text="@string/app_description"
        android:textColor="#777777"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/addShortcutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.600" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp"
        android:fontFamily="serif"
        android:gravity="start"
        android:text="@string/app_title"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/infoText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addShortcutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:drawableLeft="@drawable/ic_add"
        android:drawablePadding="12dp"
        android:drawableTint="?android:attr/textColorPrimaryInverse"
        android:fontFamily="monospace"
        android:paddingStart="10dp"
        android:paddingTop="18dp"
        android:paddingEnd="10dp"
        android:paddingBottom="18dp"
        android:text="@string/add_shortcut"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/helpLabel"
        android:layout_width="303dp"
        android:layout_height="62dp"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:fontFamily="monospace"
        android:gravity="start"
        android:lineSpacingExtra="4dp"
        android:padding="10dp"
        android:text="@string/help_quick_link"
        android:textColor="#777777"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/addShortcutButton"
        app:layout_constraintStart_toStartOf="@id/addShortcutButton"
        app:layout_constraintTop_toBottomOf="@id/addShortcutButton" />
</androidx.constraintlayout.widget.ConstraintLayout>
